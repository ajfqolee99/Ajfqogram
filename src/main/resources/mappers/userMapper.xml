<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ajfqogram.user.repository.UserRepository">
	
	<insert id="insertUser" parameterType="map">
		INSERT INTO
			`user`
		(
			`loginId`
			,`password`
			,`name`
			,`email`
		)
		VALUE
		(
			#{loginId}
			,#{password}
			,#{name}
			,#{email}
		)
	
	</insert>
	
	<select id="selectCountByLoginId" parameterType="String" resultType="int">
		SELECT 
			COUNT(*)
		FROM 
			`user`
		WHERE 
			`loginId` = #{loginId}
	</select>
	
	<select id="selectUser" parameterType="map"
	resultType="com.ajfqogram.user.domain.User">
		SELECT 
			`loginId`
			,`password`
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
			AND `password` = #{password}
	</select>
	
	
	
</mapper>